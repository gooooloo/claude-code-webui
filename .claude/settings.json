{
  "hooks": {
    "PermissionRequest": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/qidu/dev/claude-code-permission-web-approver/approve-dialog.sh",
            "timeout": 86400
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": ".*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/qidu/dev/claude-code-permission-web-approver/post-cleanup.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/Users/qidu/dev/claude-code-permission-web-approver/stop-hook.sh",
            "timeout": 86400
          }
        ]
      }
    ]
  }
}
